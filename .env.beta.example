# MANGU Publishing - Beta Environment Configuration
# Copy this file to .env.beta and fill in actual values

# Environment
NODE_ENV=beta

# Beta Mode Flag
BETA_MODE=true

# Server Configuration
PORT=3001
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://mangu_user:CHANGE_ME@localhost:5432/mangu_beta_db
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Redis Cache
REDIS_URL=redis://localhost:6379/1
REDIS_PASSWORD=
DISABLE_REDIS=0

# Authentication & Security
JWT_SECRET=CHANGE_ME_TO_RANDOM_256_BIT_KEY
JWT_EXPIRY=7d
BCRYPT_ROUNDS=10
SESSION_SECRET=CHANGE_ME_TO_RANDOM_SESSION_SECRET

# CORS
CORS_ORIGIN=https://beta.mangu.com,http://localhost:5173
CORS_CREDENTIALS=true

# AWS Services (if using)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=mangu-beta-assets
S3_CLOUDFRONT_URL=

# Email Service
EMAIL_SERVICE=ses
EMAIL_FROM=noreply@beta.mangu.com
SES_REGION=us-east-1

# Payment Processing (Test Mode)
STRIPE_SECRET_KEY=sk_test_XXXXX
STRIPE_PUBLISHABLE_KEY=pk_test_XXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXX
PAYMENT_MODE=test

# Analytics & Monitoring
ENABLE_ANALYTICS=true
ANALYTICS_ID=
SENTRY_DSN=
SENTRY_ENVIRONMENT=beta

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/beta.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
FEATURE_AUDIOBOOKS=true
FEATURE_SOCIAL_SHARING=false
FEATURE_BOOK_CLUBS=false
FEATURE_ADMIN_PANEL=true

# Beta-Specific
BETA_BANNER_MESSAGE=You are using the BETA version of MANGU Publishing
BETA_FEEDBACK_EMAIL=beta-feedback@mangu.com
BETA_TESTER_ACCESS_CODE=MANGU_BETA_2025

# External APIs (if any)
GOOGLE_BOOKS_API_KEY=
GOODREADS_API_KEY=

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Testing
TEST_MODE=false
MOCK_EXTERNAL_SERVICES=false
