{
  "name": "mangu-client",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "MANGU Publishing - Frontend Application",
  "keywords": [
    "react",
    "publishing",
    "books",
    "e-commerce"
  ],
  "scripts": {
    "dev": "npx vite --host --port 5173",
    "build": "vite build",
    "preview": "vite preview --port 4173",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --cache --cache-location node_modules/.cache/eslint",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "lint:strict": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
    "type-check": "tsc --noEmit",
    "analyze": "npm run build && npx vite-bundle-analyzer dist",
    "clean": "rm -rf dist node_modules/.vite",
    "prepare": "husky install || true",
    "lint:report": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:pages": "eslint \"src/pages/**/*.{js,jsx,ts,tsx}\" --cache --cache-location node_modules/.cache/eslint",
    "lint:components": "eslint \"src/components/**/*.{js,jsx,ts,tsx}\" --cache --cache-location node_modules/.cache/eslint",
    "lint:rest": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --cache --cache-location node_modules/.cache/eslint --ignore-pattern src/pages --ignore-pattern src/components",
    "lint:all:seq": "npm run lint:pages && npm run lint:components && npm run lint:rest",
    "lint:changed": "git diff --name-only --diff-filter=ACMRTUXB origin/main...HEAD | xargs -r eslint --cache --cache-location node_modules/.cache/eslint"
  },
  "dependencies": {
    "@aws-amplify/ui-react": "^6.13.0",
    "@headlessui/react": "^1.7.17",
    "@stripe/react-stripe-js": "^2.1.11",
    "@stripe/stripe-js": "^2.1.6",
    "@tanstack/react-query": "^4.32.6",
    "aws-amplify": "^6.15.7",
    "axios": "^1.5.0",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.4",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.30.1",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.1",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^0.34.4",
    "@vitest/ui": "^0.34.4",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.45.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^8.0.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.28",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.5.14",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^0.34.4"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
